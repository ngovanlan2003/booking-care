<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        }

        td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
        }

        tr:nth-child(even) {
        background-color: #dddddd;
        }  

        .btn-edit {
          background-color: green;
          color: white;
          border: none;
          border-radius: 3px;
          padding: 5px 15px;
          cursor: pointer;
          text-decoration: none;
        }

        .btn-delete {
          background-color: coral;
          color: white;
          border: none;
          border-radius: 3px;
          padding: 5px 15px;
          cursor: pointer;
          text-decoration: none;
        }
    </style>
</head>
<body>
    <table>
        <tr>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Action</th>
        </tr>
        <% for(let i = 0; i < data.length; i++) { %>
            <tr>
              <td><%= data[i].email %></td>
              <td><%= data[i].firstName%></td>
              <td><%= data[i].lastName%></td>
              <td>
                <a href="/edit-crud?id=<%= data[i].id %>" class="btn-edit">Edit</a>
                <a href="/delete-crud?id=<%= data[i].id %>" class="btn-delete">Delete</a>
              </td>
            </tr>
        <% } %>
      </table>
</body>
</html>